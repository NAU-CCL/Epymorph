{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python - Format project",
            "type": "shell",
            "command": "${config:python.formatting.autopep8Path}",
            "args": ["--in-place", "--recursive", "epymorph"],
            "problemMatcher": []
        },
        {
            "label": "Python - Run this module",
            "type": "shell",
            "command": "MODULE=$(echo ${relativeFileDirname}.${fileBasenameNoExtension} | sed 's/\\//./g'); python3 -m $MODULE",
            "problemMatcher": []
        },
        {
            "label": "Python - Profile this module",
            "type": "shell",
            "command": "MODULE=$(echo ${relativeFileDirname}.${fileBasenameNoExtension} | sed 's/\\//./g'); TMP=$(mktemp /tmp/py-XXXXXXXX.prof); python3 -m cProfile -o $TMP -m $MODULE --profile; snakeviz $TMP",
            "problemMatcher": []
        }
    ]
}
