{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python - Run current file",
            "type": "shell",
            "command": "python3 ${file}",
            "problemMatcher": []
        },
        {
            "label": "Python - Profile",
            "type": "shell",
            "command": "TMP=$(mktemp /tmp/py-XXXXXXXX.prof); python3 -m cProfile -o $TMP ${file} --profile; snakeviz $TMP",
            "problemMatcher": []
        }
    ]
}
